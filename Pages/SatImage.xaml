<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="EyeInTheSky.Views.SatImage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White"  Offset="0.0" />
            <GradientStop Color="#a8dfe6"  Offset="2.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False"></BackButtonBehavior>
    </Shell.BackButtonBehavior>    
        <VerticalStackLayout>
            <Image Source="satimg.svg" Aspect="AspectFit"
               HorizontalOptions="Center" BackgroundColor="Transparent" HeightRequest="75"
               Margin="0,0,0,20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Entry x:Name="locationEntry" Placeholder="Introdu o localitate" Margin="10" Grid.Column="0" Grid.Row="0"/>
                <Button x:Name="searchButton" BackgroundColor="Transparent" TextColor="Blue" Text="CautÄƒ" 
                        Margin="10" Grid.Column="1" Grid.Row="0" Clicked="searchButton_Clicked"/>
                <Label Text="Harta" Margin="10" Grid.Column="2" Grid.Row="0" TextColor="Blue"
                       HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                <Button x:Name="showMap" Text="Harta" Margin="10" Grid.Column="2" Grid.Row="0"
                        Clicked="showMap_Clicked" BackgroundColor="Transparent"
                        ImageSource="off.png" ContentLayout="Right,20"/>
                <maps:Map x:Name="googleMap" MapType="Satellite" IsShowingUser="true" MapClicked="OnMapClicked" 
                  HeightRequest="200" Grid.ColumnSpan="3" Grid.Row="1"/>
                <Label x:Name="coordLabel" TextColor="Black" FontSize="16"
                  HorizontalOptions="Center" Grid.ColumnSpan="3" Grid.Row="2"/>                
                <Button x:Name="btnNasaImg" Text="Afiseaza imaginea din satelit" Clicked="SwipeItem_Invoked"  
                    Margin="50,10,50,10" BackgroundColor="Transparent" TextColor="Blue" FontAttributes="Bold"
                    Grid.ColumnSpan="3" Grid.Row="3"/>
            </Grid>        
            <Grid x:Name="swipeContent">            
                <Image x:Name="nasaImage" HeightRequest="300" IsVisible="False" Aspect="AspectFill"/>
                <Label x:Name="lblLoading" Text="Se descarca imaginea din satelit..." HorizontalTextAlignment="Center" VerticalTextAlignment="Center" IsVisible="False"/>
            </Grid>
        </VerticalStackLayout>    
</ContentPage>