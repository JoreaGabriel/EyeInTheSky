<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="EyeInTheSky.Pages.WeatherPage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White"  Offset="0.0" />
            <GradientStop Color="#a8dfe6"  Offset="2.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False"></BackButtonBehavior>
    </Shell.BackButtonBehavior>
    <ScrollView>
        <VerticalStackLayout>
            <Image Source="satweather.png" Aspect="Fill" HorizontalOptions="Center" BackgroundColor="Transparent" Margin="0,0,0,20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Entry x:Name="locationEntry" Placeholder="Introdu o localitate" Margin="10" Grid.Column="0" Grid.Row="0"/>
                <Button x:Name="searchButton" BackgroundColor="Transparent" TextColor="Blue" Text="CautÄƒ" Margin="10" Grid.Column="1" Grid.Row="0" Clicked="searchButton_Clicked"/>
                <Label Text="Harta" Margin="10" Grid.Column="2" Grid.Row="0" TextColor="Blue" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                <Button x:Name="showMap" Text="Harta" Margin="10" Grid.Column="2" Grid.Row="0" Clicked="showMap_Clicked" BackgroundColor="Transparent" ImageSource="on.png" ContentLayout="Right,20"/>
                <maps:Map x:Name="googleMap" MapType="Satellite" IsVisible="False" IsShowingUser="true" MapClicked="OnMapClicked" HeightRequest="200" Grid.ColumnSpan="3" Grid.Row="1"/>
                <Label x:Name="coordLabel" TextColor="Black" FontSize="16" HorizontalOptions="Center" Grid.ColumnSpan="3" Grid.Row="2"/>
            </Grid>

            <StackLayout x:Name="weatherLayout" IsVisible="True" Padding="10">
                <Button x:Name="btnWeather" Text="Afiseaza detalii despre conditiile meteo" Clicked="GetWeatherDetails"
                        BackgroundColor="Transparent" BorderColor="Blue" BorderWidth="1" TextColor="Blue" Margin="20,0,20,0"/>
                <Label x:Name="weatherLocation" FontSize="20" Padding="10" />
                <Image x:Name="weatherIcon" HeightRequest="80" WidthRequest="80" HorizontalOptions="Center"/>
                <Label x:Name="weatherLabel" FontSize="16" Padding="10" />
                <Label x:Name="airPollutionLabel" FontSize="16" Padding="10">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLabelTapped" />
                    </Label.GestureRecognizers>
                </Label>
                <Button x:Name="btnForecast" Text="Vezi prognoza meteo pe 5 zile" Clicked="btnForecast_Clicked" IsVisible="False"
                        BackgroundColor="Transparent" BorderColor="Blue" BorderWidth="1" TextColor="Blue" Margin="20,0,20,0"/>
                <CollectionView x:Name="ForecastList" IsVisible="False">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="5" Padding="10" BackgroundColor="#c8e3d6">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Image Source="{Binding IconUrl}" WidthRequest="50" HeightRequest="50"/>
                                    <StackLayout Grid.Column="1" Padding="10,0">
                                        <Label Text="{Binding Hour}" FontAttributes="Bold"/>
                                        <Label Text="{Binding Description}" FontSize="12"/>
                                        <Label Text="{Binding Temp}" FontSize="12"/>
                                        <Label Text="{Binding Pressure}" FontSize="12"/>
                                        <Label Text="{Binding Humidity}" FontSize="12"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>